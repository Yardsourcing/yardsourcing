<div class="search-form">
  <%= form_with url: url, method: :get, local: true do |form| %>
    <%= form.label "Enter the zipcode where you want to yard:" %>
    <%= form.text_field :location, placeholder: "Enter US Zipcode", :required => true, class: "form-control-sm"%><br>
    <%= form.label "How will you spend your time yarding?" %><br>
    <%= form.collection_check_boxes(:purposes, purposes, :name, :name, include_hidden: false) do |purpose| %>
      <%= purpose.check_box %>
      <%= purpose.label %>
    <% end %><br>
    <%= form.submit 'Yard Me', class: "btn btn-secondary" %><br>
  <% end %>
</div>
