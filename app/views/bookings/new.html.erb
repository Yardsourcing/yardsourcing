<div class = "form-group col-md-4">
<h3>Yard: <%= @yard.name %></h3>
<%= form_with url: yard_bookings_path, local: true do |form| %>
  <%= form.label :booking_name %>
  <%= form.text_field :booking_name, required: true, class:"form-control"  %><br>
  <%= form.label 'Date' %>
  <%= form.date_field :date, class:"form-control" %><br>
  <%= form.label 'Time' %>
  <%= form.time_field :time, class:"form-control" %><br>
  <%= form.label 'Duration in Hours' %>
  <%= form.number_field :duration, class:"form-control" %><br>
  <%= form.label :description %>
  <%= form.text_area :description, size: "70x5", class:"form-control" %><br>
  <%= form.submit 'Create Booking', class: "btn btn-outline-secondary" %>
<% end %>
</div>
